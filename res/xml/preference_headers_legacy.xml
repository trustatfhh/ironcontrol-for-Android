<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference 
        android:key="application_setting"
        android:title="Application Settings">
        <intent 
            android:targetPackage="de.hshannover.f4.trust.ironcontrol"
            android:targetClass="de.hshannover.f4.trust.ironcontrol.view.SettingsActivity"
            android:action="@string/ACTION_APPLICATION_SETTINGS">
        </intent>
    </Preference>
    <Preference 
        android:key="connection_settings"
        android:title="Connection Settings">
        <intent 
            android:targetPackage="de.hshannover.f4.trust.ironcontrol"
            android:targetClass="de.hshannover.f4.trust.ironcontrol.view.list_activities.ListSavedConnectionsActivity" >
        </intent>
    </Preference>
</PreferenceScreen>